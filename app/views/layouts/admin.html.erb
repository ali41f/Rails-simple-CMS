<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS</title>
    <%= stylesheet_link_tag('admin', :media => 'all') %>
    <%= javascript_include_tag('application') %>
  </head>
  <body>
    <div id='main'>

      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div id="content">
        <%= yield %>
    </div>
  </div>

  <div id="footer">
    <p id="copyright">Ali Rehman</p>
  </div>

  </body>
</html>
