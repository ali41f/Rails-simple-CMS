<%= error_messages_for(f.object) %>

<table summary="section form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>content</th>
    <td><%= f.text_area(:content, :size => '40x10') %></td>
  </tr>
  <tr>
    <th>content type</th>
    <td>
      <%= f.radio_button(:content_type, 'text') %>
      <%= f.radio_button(:content_type, 'HTML') %>
    </td>
  </tr>
  <tr>
    <th>subject id</th>
    <td><%= f.select(:page_id, @pages.map {|p| [p.name, p.id]}) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.select(:position, 1..@section_count) %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= f.check_box(:visible) %></td>
  </tr>
</table>
